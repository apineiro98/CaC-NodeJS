<% if (typeof error !='undefined' ) { %> <% error.forEach(error=> { %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <%= error.msg %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
      ria-label="Close"
  ></button>
</div>
<% }) %> <% } %>

<h1>Crear Usuario</h1>

<form action="/users" method="post" enctype="multipart/form-data">
  <div class="mb-3">
    <label for="email" class="form-label">Correo: </label>
    <input type="email" 
      class="form-control" 
      id="email" name="email" 
      value="<%= values.email %>" 
    />
    <% if (typeof error !='undefined' ) { 
        error.forEach(error=> {
          if(error.path == 'email') {
            %>
              <p class="alert-danger"><%= error.msg %> </p>
            <%
          }
        })
    }%>
  </div>
  <div class="mb-3">
    <label for="password" class="form-label">Contrase√±a: </label>
    <input
      type="password"
      class="form-control"
      id="password"
      name="password"
    />
  </div>
  <div class="mb-3">
    <label for="image" class="form-label">Image: </label>
    <input
      type="file"
      class="form-control"
      id="image"
      name="image"
      accept="image/*"
    />
  </div>
  <button type="submit" class="btn btn-primary">Crear</button>
</form>
